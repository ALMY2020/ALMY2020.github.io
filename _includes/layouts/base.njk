<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    {# <link rel="stylesheet" href="{{ '/css/index.css' | url }}"> #}
    {# <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}"> #}
    <link rel="stylesheet" href="{{ '/css/bootstrap.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="siteNavbar">
      <div class="container-fluid">
        <a class="navbar-brand" a href="{{ '/' | url }}">{{ metadata.title }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#siteNavbar" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="siteNavbar">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="nav-item">
                <a class="nav-link {% if page.url == entry.url %} active {% endif %}  " aria-current="page" href="{{ entry.url | url }}">{{ entry.title }}</a>
              </li>
            {%- endfor %}
          </ul>
          <ul class="navbar-nav justify-content-end">
            <li class="nav-item">
              <a href="{{metadata.target_discord }}" class="nav-link" target="_blank">
              <i class="bi bi-discord" role="img"></i> Join our Discord server</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main role="main" class="container">
      <div>
        {{ content | safe }}
      </div>
    </main>    

    <div class="container">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        {# <p class="col-md-4 mb-0 text-muted">Â© 2021 Company, Inc</p> #}
    
        <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
          <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        </a>
    
        <ul class="nav col-md-4 justify-content-end">
          <li class="nav-item"><a href="{{'/mdcheatsheet.md' |url}}" class="nav-link px-2 text-muted" target="_blank">MD Cheat Sheet</a></li>
          <li class="nav-item"><a href="https://docs.github.com/en/github/site-policy/github-privacy-statement" class="nav-link px-2 text-muted" target="_blank">Github's Privacy Statement</a></li>
        </ul>
      </footer>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
